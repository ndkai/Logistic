<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="7dp"
    android:background="@drawable/background_listview_hong">
    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="xeID"
        android:id="@+id/xeID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:textSize="16sp"
            android:text="loaiXe"
            android:id="@+id/loaiXe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="taiTrong"
            android:id="@+id/taiTrong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:text="bienSo"
        android:id="@+id/bienSo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="18sp"
        android:text="Thời Gian Cung Cấp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:textSize="16sp"
            android:text="tuNgay"
            android:id="@+id/tuNgay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="denNgay"
            android:id="@+id/denNgay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textSize="18sp"
        android:text="tenTaiXe"
        android:id="@+id/tenTaiXe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:textSize="16sp"
            android:text="cmndTaiXe"
            android:id="@+id/cmndTaiXe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="gplxTaiXe"
            android:id="@+id/gplxTaiXe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>