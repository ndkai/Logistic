<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="7dp"
    android:background="@drawable/background_listview_hong">

    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="CUNGCAPHANGHOAID"
        android:id="@+id/cungCapHangHoaID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="18sp"
        android:text="tenNguoiCungCap"
        android:id="@+id/tenNguoiCungCap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16sp"
        android:text="diachiUser"
        android:id="@+id/diaChiUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:textSize="16sp"
            android:text="diachiCCC"
            android:id="@+id/diaChiCCC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#ED1F77"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Chưa Nhận"
            android:id="@+id/tinhTrangVanChuyen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>