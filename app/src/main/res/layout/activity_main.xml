<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp">

      <TextView
          android:textStyle="bold"
          android:layout_gravity="center"
          android:textSize="30sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Người cứu trợ" />
      <LinearLayout
          android:weightSum="3"
          android:layout_marginTop="40dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Tên"
             android:textStyle="bold"
             android:textSize="20sp"/>
         <TextView
             android:id="@+id/tv_tenUser"
             android:layout_marginLeft="50dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Tên : "
             android:textStyle="bold"
             android:textSize="20sp"/>
      </LinearLayout>
      <LinearLayout
          android:layout_marginTop="10dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="SĐT : "
             android:textStyle="bold"
             android:textSize="20sp"/>
         <TextView
             android:id="@+id/tv_sđtUser"
             android:layout_marginLeft="50dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="sô dien thoai"
             android:textStyle="bold"
             android:textSize="20sp"/>
      </LinearLayout>
      <LinearLayout
          android:layout_marginTop="10dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Địa chỉ : "
             android:textStyle="bold"
             android:textSize="20sp"/>
         <TextView
             android:id="@+id/tv_diachiUser"
             android:layout_marginLeft="50dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Địa chỉ"
             android:textStyle="bold"
             android:textSize="20sp"/>
      </LinearLayout>

      <TextView
          android:textStyle="bold"
          android:textSize="20sp"
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Loại hình cứu trợ"/>


     <CheckBox
         android:checked="true"
         android:id="@+id/cb_CCHH"
         android:text="Cung cấp hàng hóa"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
      <CheckBox
          android:id="@+id/cb_CCNNL"
          android:text="Cung cấp nguồn nhân lực"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <CheckBox
          android:id="@+id/cb_CCDVVT"
          android:text="Cung cấp dịch vụ vận tải"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/cb_CCK"
        android:text="Cung cấp kho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/cb_tuVan"
        android:text="Tư Vấn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

      <Button
          android:layout_marginTop="20dp"
          android:layout_gravity="center"
          android:text="Tiếp Theo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:onClick="Next"/>

    <TextView
        android:id="@+id/tv_chuyenVaiTro"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuyển Sang Người Nhận Cứu Trợ"/>


</LinearLayout>